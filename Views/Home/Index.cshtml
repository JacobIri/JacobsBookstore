@{
    ViewBag.Calc = 20 / 5;

}
@*@model IQueryable<Book> (OLD STUFF, now bringing in more)*@
@model BooksViewModel

<div class= "d-flex justify-content-center">
    <h1> Bookstore Project </h1>
    @foreach (Book b in Model.Books)
    {
     <div class="card" style="width: 30rem;">
             <h3 class="card-title">@b.Title </h3>
             <ul class="list-group list-group-flush">
                 <li class="list-group-item">Author : @b.Author</li>
                 <li class="list-group-item">Publisher : @b.Publisher</li>
                 <li class="list-group-item">Isbn Code: @b.Isbn </li>
                 <li class="list-group-item">Classification : @b.Classification</li>
                 <li class="list-group-item">Category : @b.Category</li>
                 <li class="list-group-item">Page Count : @b.PageCount pages</li>
                 <li class="list-group-item">Price : $@b.Price</li>
             </ul>
     </div>
      <br />
     }


    <div class="btn btn-primary" page-meh="@Model.PageInfo" page-action="Index"></div>
</div>
